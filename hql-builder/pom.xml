	<!--
	http://cemerick.com/2010/08/24/hosting-maven-repos-on-github/

	deploy snapshot:
	mvn -DaltDeploymentRepository=snapshot-repo::default::file:../../mvn-repo/snapshots clean deploy
	release:
	mvn release:prepare
	mvn release:perform
	
	deploy release:
	((change snapshots > versions ))
	(stash/push changes)
	((set JAVA_HOME=C:\Program Files\AdoptOpenJDK\jdk-11.0.4.11-hotspot))
	mvn release:prepare
	git checkout -b branch_bom-6.0.4 bom-6.0.4
	mvn -DaltDeploymentRepository=repo::default::file:../../mvn-repo/releases clean deploy
	git checkout master
	mvn release:clean
	mvn versions:set -DgenerateBackupPoms=false -P inc-web-modules -DnewVersion=6.0.5-SNAPSHOT
	change parent version of module "hql-builder-web" and "hql-builder-demo" and "hql-builder-full"
	delete pom.xml.releaseBackup & release.properties & pom.xml.releaseBackup & pom.xml.versionsBackup
	((change versions > snapshots ))
	((commit/commit/push))
	((install snapshots))
	-->
	<properties>
		<deploy.skip.demo>true</deploy.skip.demo>
		<deploy.skip.web>true</deploy.skip.web>
